using TurboMathRally.Core;

namespace TurboMathRally
{
    /// <summary>
    /// Main entry point for the Turbo Math Rally Windows Forms application
    /// </summary>
    internal static class Program
    {
        /// <summary>
        /// Global profile manager instance
        /// </summary>
        public static ProfileManager? ProfileManager { get; private set; }

        /// <summary>
        /// The main entry point for the application.
        /// </summary>
        [STAThread]
        static async Task Main()
        {
            // To customize application configuration such as set high DPI settings or default font,
            // see https://aka.ms/applicationconfiguration.
            ApplicationConfiguration.Initialize();
            
            // Show profile selection first
            using var profileSelectionForm = new ProfileSelectionForm();
            
            if (profileSelectionForm.ShowDialog() == DialogResult.OK && 
                profileSelectionForm.SelectedProfileManager != null)
            {
                ProfileManager = profileSelectionForm.SelectedProfileManager;
                
                // Show the main form
                Application.Run(new MainMenuForm());
                
                // Save profile on exit
                try
                {
                    if (ProfileManager?.CurrentProfile != null)
                    {
                        await ProfileManager.SaveCurrentProfileAsync();
                    }
                }
                catch (Exception ex)
                {
                    MessageBox.Show(
                        $"Error saving profile on exit: {ex.Message}",
                        "Save Error",
                        MessageBoxButtons.OK,
                        MessageBoxIcon.Warning
                    );
                }
            }
            else
            {
                // User cancelled profile selection - exit application
                Application.Exit();
            }
        }
    }
}
